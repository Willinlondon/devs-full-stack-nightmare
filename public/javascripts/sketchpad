function enemyFainted() {
  if (game.battle.player2.name === 'Bugger') {
    buggerFainting.show();
    faintingEnemy.hide();
  } else {
    faintingEnemy.show();
    buggerFainting.hide();
  }
}


  case 'victoryScreen':
      background(battleBackroundImage, 0, 0);
      battleButtonsCheck();
      enemyFainted();
	    enemyDisplayNoBattle();
      newGameCheck();
      okButton.show();
      playerImg2.show();
      beginButton.hide();
      inputPlayerName.hide();
  	  playerFaintAnimation.hide();
      game.showVictoryScreen();
      break;